/* pages/scenario_detail/index.wxss */
page {
  padding-bottom: 90rpx ;
}
.detail_block swiper {
  height: 65vw;
  text-align: center;
}
.detail_block swiper image {
  width: 75%;
}
.detail_block .goods_price {
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.detail_block .goods_name_row {
  border-bottom: 8rpx solid #dedede;
  padding: 6rpx 0;
  display: flex;
}
.detail_block .goods_name_row .goods_name {
  flex: 4;
  font-size: 32rpx;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.detail_block .goods_name_row .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 2rpx solid #cccccc;
}
.detail_block .goods_name_row .goods_collect .iconfont {
  flex: 3;
}
.detail_block .goods_name_row .goods_collect .icon-youhui {
  color: blue;
}
.detail_block .goods_name_row .goods_collect .collect_text {
  flex: 2;
  font-size: 28rpx;
}
.info_detail .info_title {
  font-size: 40rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx;
}
.bottom_bar {
  border-top: 4rpx solid #dedede;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #ffffff;
  display: flex;
}
.bottom_bar .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  justify-content: center;
  align-items: center;
  position: relative;
}
.bottom_bar .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  opacity: 0;
}
.bottom_bar .btn_cart {
  flex: 2;
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  justify-content: center;
  align-items: center;
  background-color: #66ccff;
  color: #ffffff;
  font-weight: 600;
}
.bottom_bar .btn_buy {
  flex: 2;
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  color: #ffffff;
  font-weight: 600;
}
