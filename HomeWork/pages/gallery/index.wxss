/* pages/gallery/index.wxss */
page {
  padding-bottom: 90rpx;
}
.receive_address .address_btn {
  padding: 20rpx;
}
.receive_address .address_btn button {
  width: 60%;
}
.receive_address .user_row {
  padding: 20rpx;
  display: flex;
}
.receive_address .user_row .user_info {
  flex: 4;
  font-size: 32rpx;
}
.receive_address .user_row .phone_number {
  flex: 2;
  text-align: right;
  font-size: 32rpx;
}
.cart_content .cart_title {
  padding: 20rpx;
  font-size: 38rpx;
  color: var(--themeColor);
  border-top: 2rpx solid currentColor;
  border-bottom: 2rpx solid currentColor;
}
.cart_content .cart_main .cart_item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1px solid #cccccc;
}
.cart_content .cart_main .cart_item .cart_check_wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_image {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_image image {
  width: 85%;
}
.cart_content .cart_main .cart_item .cart_info_wrap {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_name {
  flex: 2;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666666;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_price {
  color: var(--themeColor);
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool {
  display: flex;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool .num_editor {
  width: 40rpx;
  height: 40rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  border: 1rpx solid #bbbbbb;
}
.footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #ffffff;
  display: flex;
  border-top: 1px solid #dedede;
}
.footer_tool .select_all_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool .total_price_wrap {
  padding-right: 10rpx;
  flex: 3;
  text-align: right;
}
.footer_tool .total_price_wrap .total_price {
  font-size: 32rpx;
}
.footer_tool .total_price_wrap .total_price .total_price_text {
  color: var(--themeColor);
  font-size: 36rpx;
  font-weight: 600;
}
.footer_tool .total_price_wrap .trans_included {
  font-size: 28rpx;
  color: #666666;
}
.footer_tool .order_pay_wrap {
  flex: 2;
  background-color: var(--themeColor);
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}
